# Normalize line endings across platforms
* text=auto

# Force LF for source files
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.mjs text eol=lf
*.json text eol=lf
*.md text eol=lf
*.css text eol=lf
*.html text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Force LF for configs
.env* text eol=lf
.gitignore text eol=lf
.nvmrc text eol=lf

# SQL files (allow CRLF for Windows SQL tools compatibility, but prefer LF)
*.sql text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary
*.woff binary
*.woff2 binary
