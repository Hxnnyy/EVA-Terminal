{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@features/*": ["./src/features/*"],
      "@/features/*": ["./src/features/*"],
      "@/components/terminal/*": ["./src/features/terminal/components/*"],
      "@/features/terminal/*": ["./src/features/terminal/*"],
      "@/lib/terminal/*": ["./src/features/terminal/lib/*"],
      "@/hooks/use-reel-viewer": ["./src/features/terminal/hooks/use-reel-viewer"],
      "@/components/admin/*": ["./src/features/admin/ui/components/*"],
      "@/hooks/use-admin-auth": ["./src/features/admin/components/use-admin-auth"]
    },
    "types": [
      "vitest/globals",
      "vitest/importMeta",
      "@testing-library/jest-dom/vitest",
      "react",
      "react-dom"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules", ".next"]
}
